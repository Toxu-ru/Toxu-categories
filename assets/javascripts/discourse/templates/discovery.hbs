<div class="container">
  {{discourse-banner user=currentUser banner=site.banner}}
</div>

{{#if !currentUser}}
{{mount-widget widget="toxu-banner-home"}}
{{/if}}


<div class="blog-list tl-{{{currentUser.trust_level}}}">

{{#if siteSettings.sidebar_enable}}
  <div class="sidebar"> 
     {{mount-widget widget="sidebar" args=(hash cslug=category.slug)}}
  </div>
{{/if}}

<div class="telo-qa {{if currentUser.custom_fields.userbar_profile "other-no"}}">

<div class="list-controls">
  <div class="container">
    {{outlet "navigation-bar"}}
  </div>
</div>

{{conditional-loading-spinner condition=loading}}

<div class="container list-container {{if loading "hidden"}} {{if siteSettings.sidebar_enable "has-sidebar"}}">
  <div class="row">
    <div class="full-width">
      <div id="header-list-area">
        {{outlet "header-list-container"}}
      </div>
    </div>
  </div>
  <div class="row">
    <div class="full-width">
      <div id="list-area">
        {{plugin-outlet name="discovery-list-container-top"
                        args=(hash category=category listLoading=loading)}}
        {{outlet "list-container"}}
      </div>
    </div>
  </div>
</div>

</div>
</div>

{{plugin-outlet name="discovery-below"}}
